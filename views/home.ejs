<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Home page</title>
  </head>

  <body>
    <%- include('./partials/navbar') %> <% if (locals.blogs) { %>
    <div class="mt-3">
      <% locals.blogs.forEach(blog => { %>
      <div class="card" style="width: 18rem">
        <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title"><%= blog.title %></h5>
          <a href="/blog/<%= blog._id %>" class="btn btn-primary"
            >Go to the blog</a
          >
        </div>
      </div>
      <% }) %>
    </div>
    <% } %> <%- include('./partials/scripts') %>
  </body>
</html>
